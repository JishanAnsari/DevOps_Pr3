#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('Validate Maven Project') {
            steps {
                script {
                   echo "mvn validate"
                }
            }
        }
        stage('Comipile Maven Project') {
            steps {
                script {
                    echo "mvn compile"
                }
            }
        }
        stage('Test Maven Project') {
            steps {
                script {
                    echo "mvn test"
                }
            }
        }
        stage('Package Maven Project') {
            steps {
                script {
                    echo "mvn package"
                }
            }
        }
    }
}
